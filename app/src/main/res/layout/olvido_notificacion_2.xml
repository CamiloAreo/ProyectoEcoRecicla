<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OlvidoNotificacion2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#917D65"
        tools:layout_editor_absoluteX="-109dp"
        tools:layout_editor_absoluteY="-245dp">

        <View
            android:id="@+id/EcoReciclalogo_img"
            android:layout_width="113dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="63dp"
            android:background="@drawable/ecoreciclalogo" />

        <View
            android:id="@+id/EcoReciclalogo_lbl"
            android:layout_width="179dp"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="172dp"
            android:layout_marginTop="101dp"
            android:background="@drawable/ecoreciclamarca" />


        <TextView
            android:id="@+id/mensaje_lbl"
            android:layout_width="331dp"
            android:layout_height="162dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="41dp"
            android:layout_marginTop="205dp"
            android:layout_marginBottom="517dp"
            android:text="Ingresa a tu correo electrónico, te enviaremos un correo para que restablezcas tu contraseña"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/aceptar_olvido_btn"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="130dp"
            android:layout_marginBottom="449dp"
            android:backgroundTint="#149832"
            android:text="ACEPTAR"
            android:textSize="18sp"
            app:cornerRadius="10dp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
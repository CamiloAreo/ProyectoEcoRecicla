<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallaPrincipal">

    <RelativeLayout
        android:id="@+id/InicioDeSesion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#917D65"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/EcoReciclalogo_img"
            android:layout_width="193dp"
            android:layout_height="155dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="107dp"
            android:layout_marginTop="52dp"
            android:background="@drawable/ecoreciclalogo" />

        <View
            android:id="@+id/EcoReciclalogo_lbl"
            android:layout_width="270dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="237dp"
            android:background="@drawable/ecoreciclamarca" />

        <TextView
            android:id="@+id/bienvenido_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="39dp"
            android:layout_marginTop="324dp"
            android:layout_marginEnd="218dp"
            android:layout_marginBottom="520dp"
            android:text="Bienvenido"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/categorias_btn"
            android:layout_width="300dp"
            android:layout_height="74dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="57dp"
            android:layout_marginBottom="359dp"
            android:backgroundTint="#149832"
            android:src="@drawable/ecoreciclalogo"
            android:text="CATEGORÍAS"
            android:textAlignment="textEnd"
            android:textSize="24sp"
            app:cornerRadius="20dp" />

        <View
            android:id="@+id/categoriasLogo_img"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="81dp"
            android:layout_marginTop="415dp"
            android:layout_marginEnd="294dp"
            android:layout_marginBottom="373dp"
            android:background="@drawable/categorias_logo" />

        <Button
            android:id="@+id/estadisticas_btn"
            android:layout_width="300dp"
            android:layout_height="74dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="58dp"
            android:layout_marginBottom="262dp"
            android:backgroundTint="#149832"
            android:text="ESTADÍSTICAS"
            android:textAlignment="textEnd"
            android:textSize="24sp"
            app:cornerRadius="20dp" />

        <View
            android:id="@+id/estadisticasLogo_img"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="514dp"
            android:layout_marginEnd="291dp"
            android:layout_marginBottom="275dp"
            android:background="@drawable/estadisticas_logo" />

        <Button
            android:id="@+id/tips_btn"
            android:layout_width="300dp"
            android:layout_height="74dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="58dp"
            android:layout_marginBottom="162dp"
            android:backgroundTint="#149832"
            android:text="TIPS"
            android:textAlignment="textEnd"
            android:textSize="24sp"
            app:cornerRadius="20dp" />

        <View
            android:id="@+id/tipsLogo_img"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="177dp"
            android:background="@drawable/tips_logo" />

        <TextView
            android:id="@+id/cerrarSesion_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="120dp"
            android:layout_marginBottom="63dp"
            android:text="Cerrar Sesión"
            android:textColor="@color/white"
            android:textSize="26sp" />

        <ImageButton
            android:id="@+id/cerrar_btn"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="51dp"
            android:layout_marginBottom="43dp"
            android:background="@drawable/botones_redondeados"
            android:backgroundTint="#149832"
            android:src="@drawable/cerrar_sesion_logo"
            android:text=""
            android:textAlignment="textEnd"
            android:textSize="24sp"
            app:cornerRadius="20dp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/InicioDeSesion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#917D65"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="67dp">

        <View
            android:id="@+id/EcoReciclalogo_img"
            android:layout_width="193dp"
            android:layout_height="155dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="112dp"
            android:layout_marginTop="53dp"
            android:background="@drawable/ecoreciclalogo" />

        <View
            android:id="@+id/EcoReciclalogo_lbl"
            android:layout_width="270dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="77dp"
            android:layout_marginTop="234dp"
            android:background="@drawable/ecoreciclamarca" />

        <TextView
            android:id="@+id/bienvenido_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="42dp"
            android:layout_marginBottom="536dp"
            android:text="Bienvenido"
            android:textColor="@color/white"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/usuario_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="257dp"
            android:layout_marginBottom="534dp"
            android:text="Usuario"
            android:textColor="#149832"
            android:textSize="30sp" />


        <Button
            android:id="@+id/categorias_btn"
            android:layout_width="300dp"
            android:layout_height="74dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="58dp"
            android:layout_marginBottom="415dp"
            android:backgroundTint="#149832"
            android:src="@drawable/ecoreciclalogo"
            android:text="CATEGORÍAS"
            android:textAlignment="textEnd"
            android:textSize="24sp"
            app:cornerRadius="20dp" />

        <View
            android:id="@+id/categoriasLogo_img"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="87dp"
            android:layout_marginTop="417dp"
            android:background="@drawable/categorias_logo" />

        <Button
            android:id="@+id/estadisticas_btn"
            android:layout_width="300dp"
            android:layout_height="74dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="58dp"
            android:layout_marginBottom="317dp"
            android:backgroundTint="#149832"
            android:text="ESTADÍSTICAS"
            android:textAlignment="textEnd"
            android:textSize="24sp"
            app:cornerRadius="20dp" />

        <View
            android:id="@+id/estadisticasLogo_img"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="88dp"
            android:layout_marginTop="514dp"
            android:background="@drawable/estadisticas_logo" />

        <Button
            android:id="@+id/tips_btn"
            android:layout_width="300dp"
            android:layout_height="74dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="58dp"
            android:layout_marginBottom="219dp"
            android:backgroundTint="#149832"
            android:text="TIPS"
            android:textAlignment="textEnd"
            android:textSize="24sp"
            app:cornerRadius="20dp" />

        <View
            android:id="@+id/tipsLogo_img"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="89dp"
            android:layout_marginTop="612dp"
            android:background="@drawable/tips_logo" />

        <TextView
            android:id="@+id/cerrarSesion_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="120dp"
            android:layout_marginBottom="63dp"
            android:text="Cerrar Sesión"
            android:textColor="@color/white"
            android:textSize="26sp" />

        <Button
            android:id="@+id/cerrar_btn"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="51dp"
            android:layout_marginBottom="43dp"
            android:backgroundTint="#149832"
            android:text=""
            android:textAlignment="textEnd"
            android:textSize="24sp"
            app:cornerRadius="20dp" />

        <View
            android:id="@+id/cerrar_img"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="301dp"
            android:layout_marginTop="789dp"
            android:background="@drawable/cerrar_sesion_logo" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
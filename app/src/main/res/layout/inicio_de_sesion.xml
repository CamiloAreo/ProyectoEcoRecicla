<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioDeSesion">

    <RelativeLayout
        android:id="@+id/InicioDeSesion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#917D65">

        <View
            android:id="@+id/EcoReciclalogo_img"
            android:layout_width="327dp"
            android:layout_height="281dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="46dp"
            android:background="@drawable/ecoreciclalogo" />

        <View
            android:id="@+id/EcoReciclalogo_lbl"
            android:layout_width="280dp"
            android:layout_height="57dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="344dp"
            android:background="@drawable/ecoreciclamarca" />

        <TextView
            android:id="@+id/usuario_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="42dp"
            android:layout_marginBottom="381dp"
            android:text="Usuario:"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/usuario_txt"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="42dp"
            android:layout_marginBottom="328dp"
            android:background="@color/white"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/contrasena_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="42dp"
            android:layout_marginBottom="276dp"
            android:text="Contraseña:"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/contrasena_txt"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="42dp"
            android:layout_marginBottom="222dp"
            android:background="@color/white"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/olvidaste_txv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="140dp"
            android:layout_marginBottom="189dp"
            android:text="¿Olvidaste tu Contraseña?"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/iniciar_sesion_btn"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="72dp"
            android:layout_marginBottom="120dp"
            android:backgroundTint="#149832"
            android:text="INICIAR SESIÓN"
            android:textSize="24sp"
            app:cornerRadius="20dp" />

        <TextView
            android:id="@+id/registro_txv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="157dp"
            android:layout_marginBottom="85dp"
            android:text="Registrate"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="italic" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#917D65"
        tools:layout_editor_absoluteX="-109dp"
        tools:layout_editor_absoluteY="-245dp">

        <View
            android:id="@+id/EcoReciclalogo_img"
            android:layout_width="113dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="63dp"
            android:background="@drawable/ecoreciclalogo" />

        <View
            android:id="@+id/EcoReciclalogo_lbl"
            android:layout_width="179dp"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="172dp"
            android:layout_marginTop="101dp"
            android:background="@drawable/ecoreciclamarca" />


        <TextView
            android:id="@+id/mensaje_lbl"
            android:layout_width="317dp"
            android:layout_height="101dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="45dp"
            android:layout_marginBottom="602dp"
            android:text="Ingresa tu correo electrónico o Usuario, te enviaremos un correo de recuperación:"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/mensaje_txt"
            android:layout_width="320dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="45dp"
            android:layout_marginBottom="534dp"
            android:background="@color/white"
            android:textAlignment="center" />

        <Button
            android:id="@+id/enviar_btn"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="222dp"
            android:layout_marginBottom="468dp"
            android:backgroundTint="#149832"
            android:text="ENVIAR"
            android:textSize="18sp"
            app:cornerRadius="10dp" />

        <Button
            android:id="@+id/cancelar_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="49dp"
            android:layout_marginBottom="468dp"
            android:backgroundTint="@color/black"
            android:text="CANCELAR"
            android:textSize="18sp"
            app:cornerRadius="10dp" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
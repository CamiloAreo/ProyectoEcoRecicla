<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TipsMenu">

    <RelativeLayout
        android:id="@+id/InicioDeSesion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#917D65"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="67dp">

        <View
            android:id="@+id/EcoReciclalogo_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="55dp"
            android:background="@drawable/ecoreciclalogo" />

        <View
            android:id="@+id/EcoReciclalogo_lbl"
            android:layout_width="238dp"
            android:layout_height="42dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="141dp"
            android:layout_marginTop="86dp"
            android:background="@drawable/ecoreciclamarca" />


        <Button
            android:id="@+id/tip1_btn"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="223dp"
            android:layout_marginBottom="396dp"
            android:backgroundTint="#149832"
            android:src="@drawable/ecoreciclalogo"
            android:text="¿Reciclas por primera vez?"
            android:textAlignment="center"
            android:textSize="22sp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/tip2_btn"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="42dp"
            android:layout_marginBottom="395dp"
            android:backgroundTint="#149832"
            android:text="Ten Cuidado Al Reciclar..."
            android:textAlignment="center"
            android:textSize="22sp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/tip3_btn"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="222dp"
            android:layout_marginBottom="217dp"
            android:backgroundTint="#149832"
            android:text="Elementos No Reciclables"
            android:textAlignment="center"
            android:textSize="19sp"
            app:cornerRadius="20dp" />


        <Button
            android:id="@+id/tip4_btn"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="42dp"
            android:layout_marginBottom="216dp"
            android:backgroundTint="#149832"
            android:text="Mejores Prácticas"
            android:textAlignment="center"
            android:textSize="22sp"
            app:cornerRadius="20dp" />

        <View
            android:id="@+id/tipsLogo_img"
            android:layout_width="189dp"
            android:layout_height="56dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="107dp"
            android:layout_marginTop="178dp"
            android:background="@drawable/tips_titulo" />

        <TextView
            android:id="@+id/volver_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="129dp"
            android:layout_marginBottom="53dp"
            android:text="Volver"
            android:textColor="@color/white"
            android:textSize="26sp" />

        <ImageButton
            android:id="@+id/tips_volver_btn"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="294dp"
            android:layout_marginBottom="34dp"
            android:background="@drawable/botones_redondeados"
            android:backgroundTint="#149832"
            android:src="@drawable/volver_logo" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>